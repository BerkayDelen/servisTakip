            <Button Text="Ekle" Clicked="Arac_Ekle" FontSize="20" BackgroundColor="Silver" TextColor="White" HorizontalOptions="FillAndExpand" ></Button>
                        
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <Button Text="Araclar" Clicked="AraclarList" FontSize="20" BackgroundColor="Silver" TextColor="White" HorizontalOptions="FillAndExpand" ></Button>
        </StackLayout>

        <Label x:Name="mes" Text=" " TextColor="Gray" HorizontalOptions="Center" FontSize="20"></Label>
        <StackLayout>
            
            <WebView x:Name="Browser" WidthRequest="300" HeightRequest="200"/>
