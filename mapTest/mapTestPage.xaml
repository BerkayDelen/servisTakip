         <Label x:Name="label_Timestamp" Text="lo:" TextColor="Teal" HorizontalOptions="Center" FontSize="25"></Label>
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                    <Button Text="getlocation" Clicked="Handle_Clicked" FontSize="20" BackgroundColor="Silver" TextColor="White" HorizontalOptions="FillAndExpand"></Button>
